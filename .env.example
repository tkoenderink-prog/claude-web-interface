# Claude API Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Flask Configuration
FLASK_SECRET_KEY=generate_a_secure_random_key_here
FLASK_ENV=development
FLASK_DEBUG=True

# Database
DATABASE_URL=sqlite:///data/claude_clone.db

# Obsidian Vault Paths
OBSIDIAN_PRIVATE_PATH=../Obsidian-Private
OBSIDIAN_POA_PATH=../Obsidian-POA

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=5000

# Session Configuration
SESSION_LIFETIME_MINUTES=1440

# Claude Model Configuration
DEFAULT_MODEL=claude-3-5-sonnet-20241022
MAX_TOKENS=4096
TEMPERATURE=0.7

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_FILE_UPLOAD=true
ENABLE_PROJECT_KNOWLEDGE=true
ENABLE_CONVERSATION_EXPORT=true